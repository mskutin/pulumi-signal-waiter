{
  "name": "@mskutin/pulumi-signal-waiter",
  "version": "0.1.0",
  "description": "A reusable Pulumi component that blocks stack execution until a bootstrap signal message is received from an AWS SQS queue. Ideal for coordinating asynchronous resource initialization (e.g., EC2 bootstrap completion) without relying on CloudFormation cfn-signal or external Terraform providers.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\" \"*.{json,md}\"",
    "type-check": "tsc --noEmit",
    "dev": "tsc --watch",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm test",
    "docs:generate": "typedoc src/index.ts --out docs/api",
    "examples:build": "tsc --project examples/tsconfig.json"
  },
  "keywords": [
    "pulumi",
    "aws",
    "sqs",
    "bootstrap",
    "cfn-signal",
    "infrastructure-as-code",
    "deployment-synchronization",
    "dynamic-provider",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mskutin/pulumi-signal-waiter.git"
  },
  "author": {
    "name": "mskutin",
    "url": "https://github.com/mskutin"
  },
  "homepage": "https://github.com/mskutin/pulumi-signal-waiter#readme",
  "bugs": {
    "url": "https://github.com/mskutin/pulumi-signal-waiter/issues"
  },
  "peerDependencies": {
    "@pulumi/pulumi": "^3.0.0",
    "@pulumi/aws": "^6.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!dist/**",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
